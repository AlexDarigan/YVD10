#:kivy 1.10.0



<Hand>:
    size_hint: 0, .15
    padding: 0
    spacing: 0
    pos_hint: {'center_x': root.hand_x, 'y': -0.05}
    canvas:
        Color:
            rgba: 100, 0, 0, 0.5
        Rectangle:
            size: self.size
            pos: self.pos

